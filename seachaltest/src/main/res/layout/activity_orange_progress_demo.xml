<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OrangeProgressBar 颜色自定义演示"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 默认颜色进度条 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认颜色 (橙色主题)"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <com.seachal.seachaltest.customview.OrangeProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:progressBarHeight="12dp"
        app:thumbSize="18dp"
        app:orangeProgress="65"
        app:orangeMaxProgress="100" />

    <!-- XML 自定义颜色进度条 1 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义颜色 1 (蓝色主题) - XML 设置"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <com.seachal.seachaltest.customview.OrangeProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:progressBarHeight="12dp"
        app:thumbSize="18dp"
        app:orangeProgress="45"
        app:orangeMaxProgress="100"
        app:progressColor="#2196F3"
        app:backgroundColor="#E3F2FD"
        app:thumbColor="#1976D2" />

    <!-- XML 自定义颜色进度条 2 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义颜色 2 (绿色主题) - XML 设置"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <com.seachal.seachaltest.customview.OrangeProgressBar
        android:id="@+id/progressBar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:progressBarHeight="12dp"
        app:thumbSize="18dp"
        app:orangeProgress="80"
        app:orangeMaxProgress="100"
        app:progressColor="#4CAF50"
        app:backgroundColor="#E8F5E8"
        app:thumbColor="#2E7D32" />

    <!-- 代码动态设置颜色的进度条 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动态设置颜色 (紫色主题) - 代码设置"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <com.seachal.seachaltest.customview.OrangeProgressBar
        android:id="@+id/progressBar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:progressBarHeight="12dp"
        app:thumbSize="18dp"
        app:orangeProgress="30"
        app:orangeMaxProgress="100" />

    <!-- 控制按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnChangeColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随机颜色"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="16dp" />

        <Button
            android:id="@+id/btnAnimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动画演示"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded"
            android:paddingHorizontal="16dp" />

    </LinearLayout>

    <!-- 说明文字 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✨ 支持三个颜色属性的完全自定义：\n• progressColor - 进度颜色\n• backgroundColor - 背景颜色\n• thumbColor - 指示器颜色\n\n可以在 XML 中设置，也可以通过代码动态修改"
        android:textSize="12sp"
        android:textColor="#999999"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="16dp" />

</LinearLayout> 