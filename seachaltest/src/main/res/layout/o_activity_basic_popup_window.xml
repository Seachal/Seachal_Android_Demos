<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".popupwindow.BasicPopupWindowActivity">

    <!-- 功能描述 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/o_tv_feature_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:textColor="#333333"
            android:textSize="14sp" />
    </ScrollView>

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/o_btn_show_at_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="在屏幕中心显示PopupWindow" />

        <Button
            android:id="@+id/o_btn_show_as_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="作为下拉菜单显示PopupWindow" />

        <Button
            android:id="@+id/o_btn_show_with_focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="显示带焦点的PopupWindow（点击外部关闭）" />

        <Button
            android:id="@+id/o_btn_show_without_focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="显示无焦点的PopupWindow（点击外部不关闭）" />
    </LinearLayout>

</LinearLayout>