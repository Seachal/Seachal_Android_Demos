<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp"
    tools:context=".progressbar.ProgressBarDemoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="进度条演示案例"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 自定义美观进度条 - 使用用户提供的指示器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="💎 自定义美观进度条"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="高度16px，使用自定义46px指示器"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/seekbar_custom_beautiful"
                style="@style/CustomSeekBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:max="100"
                android:progress="30" />

            <TextView
                android:id="@+id/tv_custom_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="30%"
                android:textColor="#FF5722"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 进度显示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="进度: 30%"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_seekbar_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SeekBar进度: 30"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 控制按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_start_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary_background"
                android:text="开始动画"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_stop_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_secondary_background"
                android:enabled="false"
                android:text="停止动画"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_reset_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_secondary_background"
                android:text="重置"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 官方ProgressBar演示 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="1. 官方ProgressBar"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 默认水平进度条 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="默认水平进度条"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progress_bar_horizontal"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:progress="30" />

        </LinearLayout>

        <!-- 自定义样式进度条 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="自定义样式进度条"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progress_bar_custom"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/progress_bar_custom" />

        </LinearLayout>

        <!-- 圆角渐变进度条 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="圆角渐变进度条"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progress_bar_rounded"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/progress_bar_rounded" />

        </LinearLayout>

        <!-- 圆形进度条 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="圆形进度条"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="默认样式"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:id="@+id/progress_bar_circular"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:indeterminate="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="自定义颜色"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:id="@+id/progress_bar_circular_custom"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:indeterminate="true"
                        android:indeterminateTint="@color/progress_custom_color" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- SeekBar/Slider演示 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="2. SeekBar/Slider控件演示"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 默认SeekBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="默认SeekBar（可拖动调节进度）"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="30" />

        </LinearLayout>

        <!-- 自定义SeekBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="自定义样式SeekBar（圆形滑块）"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/seek_bar_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/seekbar_custom_track"
                android:thumb="@drawable/seekbar_custom_thumb" />

        </LinearLayout>

        <!-- 离散值SeekBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="离散值Slider（步进式调节）"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_discrete_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="当前值: 5"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seek_bar_discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="5" />

        </LinearLayout>

        <!-- 音量控制Slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="音量控制Slider（实际应用场景）"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_volume_down"
                    android:contentDescription="音量减小" />

                <SeekBar
                    android:id="@+id/seek_bar_volume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_volume_up"
                    android:contentDescription="音量增大" />

                <TextView
                    android:id="@+id/tv_volume_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:minWidth="30dp"
                    android:text="50%"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 温度调节Slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="温度调节Slider（范围：16-30°C）"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16°C"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <SeekBar
                    android:id="@+id/seek_bar_temperature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    android:max="14"
                    android:progress="7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30°C"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_temperature_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:minWidth="40dp"
                    android:text="23°C"
                    android:textColor="@color/progress_custom_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- 颜色调节Slider组 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="RGB颜色调节Slider组（实时预览）"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <!-- 颜色预览 -->
            <View
                android:id="@+id/color_preview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:background="#808080" />

            <!-- R值调节 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="R:"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/seek_bar_red"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:max="255"
                    android:progress="128" />

                <TextView
                    android:id="@+id/tv_red_value"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="128"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- G值调节 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="G:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/seek_bar_green"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:max="255"
                    android:progress="128" />

                <TextView
                    android:id="@+id/tv_green_value"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="128"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- B值调节 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="B:"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/seek_bar_blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:max="255"
                    android:progress="128" />

                <TextView
                    android:id="@+id/tv_blue_value"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="128"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Material Design Slider 演示 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="3. Material Design Slider (官方推荐)"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 基础 Material Slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="基础 Material Slider（连续值）"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_material_basic_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="当前值: 50"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/material_slider_basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:thumbDrawable="@drawable/icon_custom_thumb_2x"
                android:value="50f"
                android:valueFrom="0f"
                android:valueTo="100f" />

        </LinearLayout>

        <!-- 带标签的 Material Slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="带浮动标签的 Material Slider"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/material_slider_labeled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:value="75f"
                android:valueFrom="0f"
                android:valueTo="100f" />

        </LinearLayout>

        <!-- 离散步进 Material Slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="离散步进 Material Slider（步长：10）"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_material_step_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="当前步进值: 40"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/material_slider_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:value="40f"
                android:valueFrom="0f"
                android:valueTo="100f" />

        </LinearLayout>

        <!-- 范围选择 Material RangeSlider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="范围选择 Material RangeSlider（双滑块）"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_material_range_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="选择范围: 25 - 75"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/material_range_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0f"
                android:valueTo="100f" />

        </LinearLayout>

        <!-- 自定义样式 Material Slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
