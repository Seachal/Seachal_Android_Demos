<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onActivityResult.OnActivityResultActivity"
    android:orientation="vertical"
    >

<!--    一个 button ，点击后跳转到 ActivityB-->
    <Button
        android:id="@+id/btn_activity_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_px_100"
        android:text="跳转到 ActivityB"
        android:textColor="@color/common33"
        android:textSize="@dimen/dp_px_36"
       />

    <Button
        android:id="@+id/btn_activity_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_px_100"
        android:text="弹出Dialog"
        android:textColor="@color/common33"
        android:textSize="@dimen/dp_px_36"
        />


<!--    一个 textview， 用于显示结果-->
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_px_100"
        android:gravity="center"
        android:text="结果"
        android:textColor="@color/common33"
        android:textSize="@dimen/dp_px_36" />


</LinearLayout>