<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 外层阴影效果 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20000000" />
            <size 
                android:width="28dp"
                android:height="28dp" />
        </shape>
    </item>
    
    <!-- 主体圆形 -->
    <item 
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FF8A50"
                android:endColor="#FF5722"
                android:type="radial"
                android:gradientRadius="12dp" />
            <size 
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
    
    <!-- 内圈高光 -->
    <item 
        android:top="6dp"
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp">
        <shape android:shape="oval">
            <solid android:color="#40FFFFFF" />
            <size 
                android:width="16dp"
                android:height="16dp" />
        </shape>
    </item>
    
</layer-list> 